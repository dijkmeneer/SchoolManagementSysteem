{% extends 'base.html.twig' %}

{% block title %}Klas{% endblock %}

{% block body %}
    <h1>Klas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ klas.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ klas.naam }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Leraren</h2>
    <ul>
        {% for leraar in leraren %}
            <li><a href="{{ path('app_leraar_show', {'id': leraar.id}) }}">{{ leraar.naam }}</a></li>
        {% endfor %}
    </ul>

    <h2>Students</h2>
    <ul>
        {% for student in studenten %}
            <li><a href="{{ path('app_student_show', {'id': student.id}) }}">{{ student.naam }}</a></li>
        {% endfor %}
    </ul>

    <div class="bottom-links">
        <a class='btn' href="{{ path('app_klas_index') }}">Terug naar klassenlijst</a>
        <a class='btn' href="{{ path('app_klas_edit', {'id': klas.id}) }}">Klas aanpassen</a>

    {{ include('klas/_delete_form.html.twig') }}
    </div>
{% endblock %}
